.breadcrumbs
	margin-bottom 50px
	&__list
		font-size 0
	&__item
		margin-left 5px
		display inline-block
		vertical-align top
		font-size 14px
		&:first-child
			margin-left 0
	&__link
		padding-right 5px
		font-size 14px
		color inherit
		text-decoration none
		&:hover
			text-decoration underline
