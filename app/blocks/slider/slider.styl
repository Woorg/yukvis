.slider
	+below(980px)
		// margin-left 10px
		// margin-right 10px
	&__list
		position relative
		border 3px solid #cc9966
		height auto
	&__link
		display block
	&__img
		max-width 100%
		height auto
	&__next,
	&__prev
		position absolute
		z-index 1
		top 50%
		margin-top -33px
		display block
		hide-text()
		transition opacity .2s ease
		&:hover
			opacity .8
	&__next
		right 14px
		retinaSprite($slider_next_group)
	&__prev
		left 14px
		retinaSprite($slider_back_group)
