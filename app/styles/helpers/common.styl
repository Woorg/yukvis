body
	padding 13px
	background #470400 url('../images/general/bg.jpg') 50% 0 / cover repeat
	font-family $treb
	font-size 14px
	font-weight normal
	color #ffffff

.page
	&__w
		position relative
		&:after,
		&:before
			position absolute
			z-index 2
			top -20px
			border 10px solid #440b13
			content ''
			background #440b13
		&:after
			left -20px
			retinaSprite($top_left_group)
		&:before
			right -20px
			retinaSprite($top_right_group)
	&__w-w
		position relative
		box-shadow 0px 0px 1px 1px #cc9966
		&:after,
		&:before
			position absolute
			z-index 1
			bottom -20px
			border 10px solid #440b13
			content ''
			background #440b13
		&:after
			left -20px
			retinaSprite($bottom_left_group)
		&:before
			right -20px
			retinaSprite($bottom_right_group)


html,
body,
.page__w
	height 100%

.page
	&__w-w
		display table
		width 100%
		height 100%
.header,
.main,
.footer
	display table-row
	height 1px
.main
	height 100%

// container

.in
	margin auto
	max-width 1310px

