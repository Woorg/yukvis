body
	padding 13px
	background #470400 url('../images/general/bg.jpg') 50% 0 / cover repeat
	font-family $treb
	font-size 14px
	font-weight normal
	color #ffffff

.page
	&__in
		overflow hidden
	&__w
		position relative
		overflow hidden

		&:after,
		&:before
			position absolute
			z-index 2
			top -20px
			width 56px
			height 56px
			border 10px solid transparent
			content ''
			// background #440b13
		&:after
			left -20px
			background url('../images/general/top-left.png') 0 0 no-repeat, url('../images/general/bg.jpg') 0 0 no-repeat
			// retinaSprite($top_left_group)
		&:before
			right -20px
			background url('../images/general/top-right.png') 0 0 no-repeat, url('../images/general/bg.jpg')
			// retinaSprite($top_right_group)
	&__w-w
		position relative
		margin 2px
		box-shadow 0px 0px 1px 1px #cc9966
		&:after,
		&:before
			position absolute
			z-index 1
			bottom -20px
			width 56px
			height 56px
			border 10px solid transparent
			content ''
			// background #440b13
		&:after
			left -20px
			background url('../images/general/bottom-left.png') 0 0 no-repeat, url('../images/general/bg.jpg')
			// retinaSprite($bottom_left_group)
		&:before
			right -20px
			background url('../images/general/bottom-right.png') 100% 100% no-repeat, url('../images/general/bg.jpg')

			// retinaSprite($bottom_right_group)



