// container

.in
	margin auto
	width 1310px
	+below(1310px)
		padding-left 10px
		padding-right 10px
		width auto
.in_second
	margin auto
	width 980px
	+below(980px)
		padding-left 10px
		padding-right 10px
		width auto

// wysiwyg

.wysiwyg
	font-size 14px
	p
		margin-bottom 35px
		line-height 24px
		color inherit
	strong,
	span
		font-weight bold

	h1
		margin-bottom 26px
		font-size 24px
	h2
		margin-bottom 26px
		font-size 20px
	h3
		margin-bottom 26px
		font-size 16px
	hr
		border none
		border-top 1px solid #cc9966
		background transparent
		margin-bottom 35px

	.align-left
		margin-right 35px
		margin-bottom 35px
		max-width 100%
		float left
		+below(768px)
			float none
	.align-right
		margin-left 35px
		margin-bottom 35px
		max-width 100%
		float right
		+below(768px)
			float none
	img
		max-width 100%
		height auto

	table
		margin-bottom 35px
		width 100%
		td
			border 1px solid #cc9966
			padding 30px
			width 50%
			&:nth-child(2n)
				text-align center
